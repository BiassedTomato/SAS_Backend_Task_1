
@{
    ViewData["Title"] = "Users";
}

@inject IUserStore Store

<h1>Details</h1>

<div>
    <table>

        @for (ulong i = 0; i < Store.Size; i++)
        {
            var user = Store.Get(i);
            <tr>
                <td>
                    <p>
                        <!--//<a asp-action="Details" asp-controller="Users" asp-route-ID="@user.ID" class="Button"></a>-->

                        <a asp-action="Details" asp-controller="Users" asp-route-id="@user.ID" class="Button">@user.FirstName @user.LastName (@user.Email)</a>
                        <a asp-action="Edit" asp-controller="Users" asp-route-id="@user.ID" style="color:#ffd757">Edit</a>
                        <a asp-action="Delete" asp-controller="Users" asp-route-id="@user.ID" style="color:#e72d2d">Delete</a>
                    </p>
                </td>
            </tr>
        }

        @if (Store.Size == 0)
        {
            <tr>
                <td>
                    <h3>Nobody here but us chickens! <a asp-action="Index" asp-controller="Home">Back to index</a></h3>
                </td>
            </tr>
        }
    </table>
</div>

